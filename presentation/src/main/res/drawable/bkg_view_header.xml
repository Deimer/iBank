<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="bottom|end">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/dark_20"/>
            <corners
                android:bottomLeftRadius="@dimen/dimen_dp_56"
                android:bottomRightRadius="@dimen/dimen_dp_56"/>
        </shape>
    </item>
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/melon"/>
            <corners
                android:bottomLeftRadius="@dimen/dimen_dp_56"
                android:bottomRightRadius="@dimen/dimen_dp_56"/>
        </shape>
    </item>
</layer-list>